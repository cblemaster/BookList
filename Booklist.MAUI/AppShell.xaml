<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Booklist.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Booklist.MAUI"
    xmlns:pages="clr-namespace:Booklist.MAUI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Booklist.MAUI">

    <TabBar>
        <ShellContent
            Title="Books"
            ContentTemplate="{DataTemplate pages:BooksPage}"
            Route="Books" />

        <ShellContent
            Title="Authors"
            ContentTemplate="{DataTemplate pages:AuthorsPage}"
            Route="Authors" />

        <ShellContent
            Title="Genres"
            ContentTemplate="{DataTemplate pages:GenresPage}"
            Route="Genres" />
    </TabBar>

</Shell>
